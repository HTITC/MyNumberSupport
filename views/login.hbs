{{#section 'styles'}}
    <link rel="stylesheet" href="/styles/login.css"/>
{{/section}}

<h4>Login to MyNumber site</h4>

<form class="form-horizontal" role="form" action="" method="POST">
    <input type="hidden" name="_csrf" value="{{_csrfToken}}">
    <div class="form-group">
        <label for="fieldUserName" class="col-sm-2 control-label">User name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" required id="fieldUserName" name="username" value={{username}}>
        </div>
    </div>
    <div class="form-group">
        <label for="fieldPassword" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-4">
            <input type="password" class="form-control" required id="fieldPassword" name="password">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
            <button type="submit" class="btn btn-default">Login</button>
        </div>
    </div>
</form>
